<div class="container-fluid">

  <div class="headers">
    <p>
      <h1>2016 Electoral College Vote Calculator</h1>

      Left-click: blue > red > unassigned | Right-click: red > blue > unassigned<br />
    </p>

    <div class="list-group">
      <div class="list-group-item active">
        Electoral vote tally <div class="btn btn-default reset">Reset</div>
      </div>
      <div class="list-group-item">
        Unassigned: <div id="unassigned"><%= @unassigned_EV %></div><br />
      </div>
      <div class="list-group-item dem-tally">
        Democrats: <div id="dems"><%= @blue_EV %></div><br />
      </div>
      <div class="list-group-item rep-tally">
        Republicans: <div id="reps"><%= @red_EV %></div><br />
      </div>
      <div class="list-group-item">

        <% if user_signed_in? %>
          <h4>Hi, <%= link_to @user.name, user_path(@user), "data-no-turbolink" => true %>. <%= link_to "Log out", logout_path, class: "btn btn-default navbar-btn" %></h4>

          <% if @map %>

            <!-- update map -->
            <%= form_for [@user, @map], url: user_map_path(@user, @map) do |f| %>
              <%= f.hidden_field :data %>
              <%= f.submit "Update map", class:"btn btn-default" %>
            <% end %>

          <% else %>

            <!-- save map -->
            <%= form_for Map.new, url: user_maps_path(@user) do |f| %>
              <%= f.label "Map name" %><br />
              <%= f.text_field :name %><br />
              <%= f.hidden_field :data %>
              <%= f.submit "Save current map", class:"btn btn-default" %>
            <% end %>

          <% end %>

        <% else %> <!-- user not signed in -->

          <%= form_tag(login_path, method: 'post') do %>
            <%= label_tag :name %>
            <%= text_field_tag :name %>
            <%= label_tag :password %>
            <%= password_field_tag :password %>
            <%= submit_tag "Log in", class: "btn btn-default navbar-btn" %> or
          <% end %>


          <%= link_to "Sign up here", signup_path, class: "btn btn-default navbar-btn" %>

        <% end %>

        <% flash.each do |k, message| %>
          <div class="alert alert-danger"><%= message %></div>
        <% end %>

      </div>
    </div>

  </div>

  <%= javascript_tag do %>
    window.userMapData = '<%= @data %>';
  <% end %>

  <!-- prevent number highlighting on double-click -->
  <div class="map" oncontextmenu="return false;">
    <!-- D3 map appears here -->
  </div>


  <footer>
    <div class="container text-center">
      <p class="text-muted">Created by <a href="http://www.jeffslutzky.com">Jeff Slutzky</a>. Code <a href="https://github.com/jeffslutzky/electoral-college">here</a>.</p>
    </div>
  </footer>

</div>



<script>
  getMap();
</script>
