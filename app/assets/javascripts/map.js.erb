$(function() {

  var w = 1300;
  var h = 700;

  var blueStates = [];
  var redStates = [];
  var blueEV = 0;
  var redEV = 0;
  var noEV = 538;

  var projection = d3.geo.albersUsa()
      .translate([w/2, h/2])
      .scale([1500]);

  var path = d3.geo.path()
      .projection(projection);

  var svg = d3.select(".map")
      .append("svg")
      .attr("width", w)
      .attr("height", h);

  var tip = d3.tip()
      .attr("class", "d3-tip")
      .offset(function (d) {
        if (d.abbr === "DC") {
          return [20,100]
        } else { return [10, 0] }
      })
      .html(function(d){
        return d.properties.name + ": " + d.ev;
      });

  svg.call(tip);

  d3.json("us-states.json", function(json) {
    svg.selectAll("path")
        .data(json.features)
        .enter()
        .append("path")
        .attr("d", path)
        .classed("neutral", true)
        .attr("id", "states")
        .on("click", click)
        .on("contextmenu", rightClick)
        .on('mouseover', tip.show)
        .on('mouseout', tip.hide);
    svg.selectAll("text")
        .data(json.features)
        .enter()
        .append("text")
        .attr("transform", function(d) { return "translate(" + path.centroid(d) + ")"; })
        .attr("dy", function (d) {
          if (d.abbr === "DC") { return "1em" }
          else if (d.abbr === "MI") { return "1.5em" }
          else if (d.abbr === "MA") { return "0.1em" }
          else { return ".5em"}
        })
        .attr("dx", function (d) {
          if (d.abbr === "FL") { return ".7em" }
          else if (d.abbr === "LA") { return "-1em" }
          else if (d.abbr === "CA") { return "-1em" }
          else if (d.abbr === "MN") { return "-.7em" }
          else if (d.abbr === "DC") { return "-1.1em" }
          else {return "-.3em"}
        })
        .attr("class", "ev")
        .text(function(d) { return d.ev; });
  });

  function click(d) {
    if (this.classList == "neutral") {
      d3.select(this)
          .classed({"neutral": false, "blue": true});
      blueStates.push(d.properties.name);
      blueEV += d.ev;
      noEV -= d.ev;
    } else if (this.classList == "blue") {
      d3.select(this)
          .classed({"blue": false, "red": true});
      blueStates.splice($.inArray(d.properties.name, blueStates),1);
      blueEV -= d.ev;
      redStates.push(d.properties.name);
      redEV += d.ev;
    } else {
      d3.select(this)
          .classed({"red": false, "neutral": true});
      redStates.splice($.inArray(d.properties.name, redStates),1);
      redEV -= d.ev;
      noEV += d.ev;
    };
    $("#dems").text(blueEV);
    $("#reps").text(redEV);
    $("#unassigned").text(noEV);
    winner();
  };

  function rightClick(d) {
    if (this.classList == "neutral") {
      d3.select(this)
      .classed({"neutral": false, "red": true});
      redStates.push(d.properties.name);
      redEV += d.ev;
      noEV -= d.ev;
    } else if (this.classList == "blue") {
      d3.select(this)
      .classed({"blue": false, "neutral": true});
      blueStates.splice($.inArray(d.properties.name, blueStates),1);
      blueEV -= d.ev;
      noEV += d.ev;
    } else {
      d3.select(this)
      .classed({"red": false, "blue": true});
      redStates.splice($.inArray(d.properties.name, redStates),1);
      redEV -= d.ev;
      blueStates.push(d.properties.name);
      blueEV += d.ev;
    };
    $("#dems").text(blueEV);
    $("#reps").text(redEV);
    $("#unassigned").text(noEV);
    winner();
  };

  function winner() {
    if (blueEV >= 270) {
      $(".dem-tally").prepend('<div class="winner"><%= image_tag("check.png") %></div>');
    } else {
      $(".dem-tally").children(".winner").remove();
    };
    if (redEV >= 270) {
      $(".rep-tally").prepend('<div class="winner"><%= image_tag("check.png") %></div>');
    } else {
      $(".rep-tally").children(".winner").remove();
    };
  }

  $(".reset").on("click", function() {
    d3.selectAll("path")
        .classed({"neutral": true, "red": false, "blue": false});
    blueEV = 0;
    redEV = 0;
    noEV = 538;
    $("#dems").text(blueEV);
    $("#reps").text(redEV);
    $("#unassigned").text(noEV);
    $(".dem-tally").children(".winner").remove();
    $(".rep-tally").children(".winner").remove();
  });

  $(".small-states").on("click", function() {
    if ($(this).hasClass("neutral")) {
      $(this).removeClass("neutral");
      $(this).addClass("blue");
    } else if ($(this).hasClass("blue")) {
        $(this).removeClass("blue");
        $(this).addClass("red");
    } else if ($(this).hasClass("red")) {
        $(this).removeClass("red");
        $(this).addClass("neutral");
    }
  });

})
